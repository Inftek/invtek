    {% extends ':template:template.html.twig' %}


    {% block contentheader %}


    <section class="content-header">
        <h1>
            Marca
            <small>Listar</small>
        </h1>
    </section>


    {% endblock %}


    {% block panelheading %}
    <a href="{{ path('cadastro_marca_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>    {% endblock %}

    {% block panelbody %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Ações</th>
                    <th>Nome</th>
            </tr>
            </thead>
            <tbody>
            {% for marca in marcas %}
            <tr>
                        <td>
                                <a href="{{ path('cadastro_marca_show', { 'id': marca.id }) }}" class="btn btn-primary btn-sm">
                                    <span class="glyphicon glyphicon-eye-open"></span>
                                    Mostrar
                                </a>
                                <a href="{{ path('cadastro_marca_edit', { 'id': marca.id }) }}" class="btn btn-primary btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span>
                                    Editar
                                </a>
                        </td>
                <td>{{ marca.nome }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    {% endblock %}
