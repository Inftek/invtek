{% extends ':template:template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Associar Equipamento
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_equipamentoaddequipamento_new',{ 'equipamento' : equipamento.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
        <a href="{{ path('cadastro_equipamento_show',{ 'id' : equipamento.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-eye-open"></span>
            Mostrar Equipamento
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Pai</th>
                    <th>Filho</th>
                    <th>Ações</th>
                </tr>
                </thead>
                <tbody>
                {% for equipamentoHasEquipamento in equipamentoHasEquipamentos %}
                    <tr>
                        <td>{{ equipamentoHasEquipamento.equipamentoPai.nome }}</td>
                        <td>{{ equipamentoHasEquipamento.equipamentoFilho.nome }}</td>
                        <td>
                            <a href="{{ path('cadastro_equipamentoaddequipamento_edit', { 'id': equipamentoHasEquipamento.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
