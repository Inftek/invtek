{% extends ':template:template.html.twig' %}



    {% block contentheader %}

        <section class="content-header">
            <h1>
                Equipamento
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}

    {% block firstrow %}

        {% for message in app.session.flashBag.get('notice') %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
                </div>
            </div>
        {% endfor %}


    {% endblock %}


    {% block panelheading %}

        <div class="row">

        </div>
    {% endblock %}



    {% block panelbody %}

        <div class="table table-responsive">
            <table class="table table-bordered table-condensed">
                <tbody>
                <tr>
                    <th>Nome</th>
                    <td>{{ equipamento.nome }}</td>
                </tr>
                <tr>
                    <th>Validade</th>
                    <td>{% if equipamento.validade %}{{ equipamento.validade|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Data da Compra</th>
                    <td>{% if equipamento.dataCompra %}{{ equipamento.dataCompra|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Numeroserie</th>
                    <td>{{ equipamento.numeroserie }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{% if equipamento.status %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Patrimonio</th>
                    <td>{{ equipamento.patrimonio }}</td>
                </tr>
                <tr>
                    <th>Descricao</th>
                    <td>{{ equipamento.descricao }}</td>
                </tr>
                <tr>
                    <th>Observacao</th>
                    <td>{{ equipamento.observacao }}</td>
                </tr>
                </tbody>
            </table>

        </div>

    {% endblock %}

{% block panelfooter %}

    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="load">

                </div>

            </div>
        </div>
    </div>

    <a href="{{ path('report_equipamento_moreinformation', { 'equipamento': equipamento.id }) }}"
       class="link btn btn-primary btn-sm" data-toggle="modal" data-target=".bs-example-modal-lg">
        <span class="glyphicon glyphicon-exclamation-sign"></span>
        Mais Informações
    </a>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>

        $(document).ready(function(){

            var $link = $(".link");
            var url = $($link).attr('href');
            var load = $(".load");

            $($link).click(function(e){

                e.preventDefault();

                $.get(url,function(data){
                    // $(load).html(data);
                });

            });

        });

    </script>

{% endblock %}
