{% extends ':template:template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Software
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_software_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Numerolicensa</th>
                    <th>Versao</th>
                    <th>Serial</th>
                    <th>Tipo de Software</th>
                </tr>
                </thead>
                <tbody>
                {% for software in softwares %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_software_show', { 'id': software.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                Mostrar
                            </a>
                            <a href="{{ path('cadastro_software_edit', { 'id': software.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                        <td>{{ software.descricao }}</td>
                        <td>{{ software.numerolicensa }}</td>
                        <td>{{ software.versao }}</td>
                        <td>{{ software.serial }}</td>
                        <td>{{ software.tiposoftware.descricao }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
