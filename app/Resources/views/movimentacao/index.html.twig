{% extends ':template:template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Movimentacao
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('movimentacao_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Movimentação</th>
                    <th>Data Crição</th>
                    <th>De</th>
                    <th>Para</th>
                    <th>Criador</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for movimentacao in movimentacaos %}
                    <tr>
                        <td>
                            <a href="{{ path('movimentacao_show', { 'id': movimentacao.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                Mostrar
                            </a>
                            <a href="{{ path('movimentacao_edit', { 'id': movimentacao.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                        <td>{{ movimentacao.id }} | {{ movimentacao.datahora|date('d-m-Y') }}</a></td>
                        <td>{{ movimentacao.datahora|date('d-m-Y') }}</td>
                        <td>{{ movimentacao.usuarioOrigem.departamento.nome }}</td>
                        <td>{{ movimentacao.usuarioDestino.departamento.nome }}</td>
                        <td>{{ movimentacao.usuarioCriador.nome }}</td>
                        <td>{% if movimentacao.status %}Finalizado{% else %}Aberto{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
